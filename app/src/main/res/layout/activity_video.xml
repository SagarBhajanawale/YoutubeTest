<LinearLayout


    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/videoActivityLinearLayout"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sagar.youtubetest.VideoActivity">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/videoActivityConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.youtube.player.YouTubePlayerView


            android:id="@+id/youtubeview"


            android:layout_width="404dp"


            android:layout_height="220dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </com.google.android.youtube.player.YouTubePlayerView>

        <ListView
            android:id="@+id/videoList2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/youtubeview" />


    </android.support.constraint.ConstraintLayout>


</LinearLayout>